        <script id="template" type="text/html">
            <table class="table">
                <thead>
                <tr>
                    <th>{{ 'student.first_name'|trans }}</th>
                    <th>{{ 'student.last_name'|trans }}</th>
                    <th>{{ 'student.school_year'|trans }}</th>
                    <th>{{ 'student.email'|trans }}</th>
                    <th>{{ 'student.is_sub'|trans }}</th>
