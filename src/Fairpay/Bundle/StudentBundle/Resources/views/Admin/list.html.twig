                                    {{ true | label }}
                                [[else]]
                                    {{ false | label }}
                                [[/if]]
                            </td>
                            <td class="actions">
                                <a class="btn info" href="{{ path_tmpl('fairpay_profile_student') }}">
                                    Voir
                                </a>
                            </td>
                        </tr>
                    [[/for]]
                </tbody>
            </table>
        </script>
    </div>
